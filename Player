import java.util.Random;
import java.util.Scanner;

public class Player
  {
    private String name;
    private int health;
    private static int playerCount = 0; //static variable 
//constructors
public Player(String name, int health)
  {
  this.name = name;
  this.health = health; 
  playerCount++;
  }
public Player()
  {
    name = "";
    health = 0;
  }
//getters 
    public String getName()
    {
      return name;
    }
    public int getHealth()
    {
      return health;
    }
    public static int getPlayerCount()
    {
      return playerCount;
    }

//setters
    public void setName(String name)
    {
      this.name = name;
    }
    public void setHealth(int health)
    {
      this.health = health;
    }
//brain method
    public static void choice(Player currentPlayer)
    {
       System.out.println("You have to make a choice. Go into the dark and spooky cave or go over the old wooden bridge.....[1 or 2]");
      Scanner scan = new Scanner(System.in);
      if (scan.nextInt() == 1)
      {
        Cave(currentPlayer);
      }




      if (scan.nextInt() == 1)
      {
        Player.Cave(currentPlayer);
      }
      else
      {
        System.out.println("Uh oh");
      }

    }

   
    public static void Cave(Player currentPlayer)
    {
      System.out.println("You walk into the cave...you hear a loud snoring sound....ITS A GOBLIN");
      String ans = validateYes("\nDo you want to fight it? (yes/no)");
      if (ans.equalsIgnoreCase("yes"))
      {
        Random rand = new Random();
        int randNum = rand.nextInt(3);
        if (randNum == 0)
        {
          System.out.println("You fight the goblin and win");
          if(currentPlayer.getHealth() > 50)
          {
            currentPlayer.setHealth(currentPlayer.getHealth()+5);
            System.out.println("You gained 5 health");
            System.out.println("You now have " + currentPlayer.getHealth() + " health");
          }
          else 
          {
            currentPlayer.setHealth(currentPlayer.getHealth()+ 10);
            System.out.println("You gained 10 health");
            System.out.println("You now have " + currentPlayer.getHealth() + " health");
          }
      
        }
        else if (randNum == 1)
        {
          System.out.println("You fight the goblin and lose");
          if(currentPlayer.getHealth() > 50)
            {
             currentPlayer.setHealth(currentPlayer.getHealth() - 20);
              System.out.println("You lost 20 health");
              System.out.println(" You now have" + currentPlayer.getHealth() + "health");
            }
            else 
            {
              currentPlayer.setHealth(currentPlayer.getHealth() - 10);
              System.out.println("You lost 10 health");
              System.out.println("You now have" + currentPlayer.getHealth() + "health");
            }
    
      }
        else 
        {
          System.out.println("You fight the goblin and tie");
        }

    }
      if(ans.equalsIgnoreCase("no"))
      {
        System.out.println("You walk away from the goblin");
      }
    }

